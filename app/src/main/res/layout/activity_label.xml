<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercises.label.LabelActivity"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_genital_fem"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Spinner
        android:id="@+id/fallopian_tube_spinner"
        android:layout_width="150dp"

        android:layout_height="wrap_content"

        android:layout_marginTop="140dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/uterus_spinner"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="65dp"

        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/ovary_spinner"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/uterus_spinner"
        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/endometrium_spinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"

        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/vagina_spinner"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="148dp"


        />
    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/cervix_spinner"

        app:layout_constraintBottom_toTopOf="@id/vagina_spinner"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:id="@+id/infundibulim_spinner"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="35dp"
        />



</android.support.constraint.ConstraintLayout>